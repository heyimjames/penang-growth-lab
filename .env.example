# Site URL - Required for auth callbacks (set to your production domain)
NEXT_PUBLIC_SITE_URL=https://your-domain.com

# Supabase - Required for authentication and database
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
# Service role key - Required for admin functions (user management)
# Get this from your Supabase dashboard: Settings > API > service_role key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Anthropic Claude - Required for AI case analysis
ANTHROPIC_API_KEY=your_anthropic_api_key

# Google AI (Gemini) - Required for evidence analysis (images, videos, PDFs)
# Get your API key at https://aistudio.google.com/app/apikey
GOOGLE_AI_API_KEY=your_google_ai_api_key

# Perplexity - Required for legal research
PERPLEXITY_API_KEY=your_perplexity_api_key

# Exa AI - Required for company search
EXA_API_KEY=your_exa_api_key

# Firecrawl - Required for web scraping company contact info
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Stripe - Required for credit purchases
# Get your API keys at https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
# Webhook signing secret from https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_signing_secret

# Mixpanel - Optional for analytics
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_token

# OpenAI - Future: for Whisper voice transcription (not yet implemented)
# OPENAI_API_KEY=your_openai_api_key

# Slack - For feature request notifications
# Create a Slack app at https://api.slack.com/apps
# Enable Incoming Webhooks and Interactive Components
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_SIGNING_SECRET=your_slack_signing_secret

# GitHub - For automated feature building
# Create a personal access token with repo and workflow scopes
GITHUB_TOKEN=ghp_your_github_token
GITHUB_OWNER=your_github_username
GITHUB_REPO=your_repo_name
